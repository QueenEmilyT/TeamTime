extends layout
block content
  body
      .col-md-10
        h4 Username : #{name}
        h5 Total Balance : #{total}
        table.table.table-striped.table-dark
          thead
            tr
              th Date Deposited
              th Amount

            tbody
              each deposit in deposits
                tr
                  td #{moment(deposit.createdAt).format("DD-MM-YYYY (HH:MM:SS)")}
                  td= deposit.amount

