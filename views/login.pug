doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' integrity='sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z' crossorigin='anonymous')
.container-fluid
  .row
    .col-sm-12
      nav.navbar.navbar-expand-lg.navbar-dark(style='background-color: #0366fc; height: 100%;')
        a.navbar-brand(href='#') Navbar
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item.active
              a.nav-link(href='#')
                | Home 
                span.sr-only (current)
            li.nav-item
              a.nav-link(href='#') Features
            li.nav-item
              a.nav-link(href='#') Pricing
            li.nav-item
              a.nav-link.disabled(href='#' tabindex='-1' aria-disabled='true') Disabled
  .row
    .col-sm-4.login.justify-content-center
      form(action="/client/login" method="POST")
        .form-group
          label(for='username') Username
          input#exampleInputEmail1.form-control(type='text' aria-describedby='emailHelp' name='username')
        .form-group
          label(for='password') Password
          input#exampleInputPassword1.form-control(type='password' name='password')

        button.btn.btn-primary.col-sm-12(type='submit') Login
.footer.fixed-bottom
  // Footer
  footer.font-small.cyan.darken-3(style='background-color:#d9d0bd')
    // Footer Elements
    .container
      // Grid row
      .row
        // Grid column
        .col-md-12.py-5
          .mb-5.flex-center
            // Facebook
            a.fb-ic
              i.fab.fa-facebook-f.fa-lg.white-text.mr-md-5.mr-3.fa-2x  
            // Twitter
            a.tw-ic
              i.fab.fa-twitter.fa-lg.white-text.mr-md-5.mr-3.fa-2x  
            // Google +
            a.gplus-ic
              i.fab.fa-google-plus-g.fa-lg.white-text.mr-md-5.mr-3.fa-2x  
            // Linkedin
            a.li-ic
              i.fab.fa-linkedin-in.fa-lg.white-text.mr-md-5.mr-3.fa-2x  
            // Instagram
            a.ins-ic
              i.fab.fa-instagram.fa-lg.white-text.mr-md-5.mr-3.fa-2x  
            // Pinterest
            a.pin-ic
              i.fab.fa-pinterest.fa-lg.white-text.fa-2x  
        // Grid column
      // Grid row
    // Footer Elements
    // Copyright
    .footer-copyright.text-center.py-3
